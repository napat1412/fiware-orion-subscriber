const { createLogger, format, transports } = require('winston');

const logger = createLogger({
  level: 'debug',
  format: format.combine(
    format.timestamp({ format: 'YYYY-MM-DDTHH:mm:ssZ' }),
    //format.timestamp(),
    format.colorize(),
    format.simple(),
    format.splat()
  ),
  transports: [new transports.Console()]
});

module.exports = logger;
